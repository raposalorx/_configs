# Generic {{{

# Open terminal
super + Return
  termite
  #~/.config/sxhkd/preselect.sh && termite
  

# Rofi launcher
super + s
  rofi -show run

# Refi selector for windows in current workspace.
super + Tab
  rofi -show windowcd

# Restart sxhkd and reload the config
super + Escape
  pkill -USR1 -x sxhkd

# Show Cheatsheets
super + shift + ctrl + Return
  ~/.config/sxhkd/rofi-cheatsheet.sh

# }}}

# bspwm {{{

# Hide window
super + equal
  bspc node -g hidden=on

# Rofi selector for hidden windows in the current workspace.
super + slash
  ~/.config/sxhkd/rofi-hidden.sh

# Quit bspwm
super + alt + Escape
  bspc quit

# Close/Kill window
super + {_,shift + }c
  bspc node -{c,k}

# Switch to monocle or titled layout
super + {comma,period}
  bspc desktop -l {monocle,tiled}

#super + m
#  bspc desktop -l next

# Next and Previous windows
super + {n,p}
  bspc node -f {next,prev}

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
#super + y
#  bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Rotate the desktop by 90 degrees
super + r
  bspc node @/ -R 90

# Swap the current node and the biggest node
super + g
  bspc node -s biggest

# Switch node to tiled, pseudo, floating, or fullscreen
super + {t,shift + t,space,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {x,y,z}
#  bspc node -g {locked,sticky,private}

# Sticky window
super + w
  bspc node -g sticky

# Move focus with vi keys
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#  bspc node -f @{parent,brother,first,second}

# focus the next/previous node
#super + {_,shift + }c
#  bspc node -f {next,prev}

# Move through desktops
super + bracket{left,right}
  bspc desktop -f {prev,next}

# focus the last node/desktop
#super + {grave,Tab}
#  bspc {node,desktop} -f last

# Refocus last node
super + grave
  bspc node -f last

# Walk through focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# Focus desktop, or move node to desktop 1-F12
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

super + {_,shift + }F{1-9}
  bspc {desktop -f,node -d} '^1{1-9}'

super + {_,shift + }F1{0-2}
  bspc {desktop -f,node -d} '^2{0-2}'

# Preselect new node direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# Set preselect ratio for the current node
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# }}}

# System {{{

# Change laptop brightness
XF86MonBrightness{Down,Up}
  ~/.bin/lap_brightness.sh {down,up}

# }}}
